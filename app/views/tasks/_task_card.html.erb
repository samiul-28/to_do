<a href="<%= task_path(task) %>" class="text-decoration-none text-dark">
  <div class="card mb-2" style="cursor: pointer;">
    <div class="card-header py-2">
      <h6 class="card-title mb-0"><%= task.title %></h6>
      <span class="badge <%= task.completed? ? 'bg-success' : 'bg-warning' %>">
        <%= task.completed? ? 'Completed' : 'Pending' %>
      </span>
    </div>
    <div class="card-body p-2">
      <p class="card-text mb-1" style="font-size: 0.9rem;">
        <%= task.description.truncate(50) %>
      </p>
      <p class="card-text mb-1">
        <small class="text-muted">
          Deadline: <%= task.deadline&.strftime('%B %d, %Y %I:%M %p') %>
        </small>
      </p>
    </div>
  </div>
</a>

