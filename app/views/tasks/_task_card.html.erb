<div class="card mb-2" style="max-width: 18rem;">
  <div class="card-header">
    <h5 class="card-title"><%= task.title %></h5>
    <span class="badge <%= task.completed? ? 'bg-success' : 'bg-warning' %>">
      <%= task.completed? ? 'Completed' : 'Pending' %>
    </span>
  </div>
  <div class="card-body">
    <p class="card-text"><%= task.description %></p>
    <p class="card-text">
      <small class="text-muted">
        Deadline: <%= task.deadline&.strftime('%B %d, %Y %I:%M %p') %>
      </small>
    </p>
    <%= link_to "Show", task_path(task),class: 'btn btn-primary btn-sm' %> 
    <%= link_to "Edit", edit_task_path(task), class: 'btn btn-secondary btn-sm' %>
    <%= button_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
  </div>
</div>
