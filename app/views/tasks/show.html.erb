<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title"><%= @task.title %></h4>
          <span class="badge <%= @task.completed? ? 'bg-success' : 'bg-warning' %>">
            <%= @task.completed? ? 'Completed' : 'Pending' %>
          </span>
        </div>
        <div class="card-body">
          <p class="card-text">
            <strong>Description:</strong> <%= @task.description.presence || 'No description provided.' %>
          </p>
          <p class="card-text">
            <strong>Deadline:</strong> 
            <%= @task.deadline&.strftime('%B %d, %Y %I:%M %p') || 'No deadline set.' %>
          </p>
          <p class="card-text">
            <strong>Status:</strong> 
            <%= @task.completed? ? 'This task is marked as completed.' : 'This task is still pending.' %>
          </p>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <a href="<%= edit_task_path(@task) %>" class="btn btn-primary btn-sm">Edit</a>
          <%= button_to 'Delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: 'btn btn-danger btn-sm' %>
          <%= link_to 'Back to Tasks', tasks_path, class: 'btn btn-secondary btn-sm' %>
        </div>
      </div>
    </div>
  </div>
</div>

